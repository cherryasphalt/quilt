<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textViewStyle">@style/workSansStyle</item>
        <item name="bottomSheetDialogTheme">@style/RoundedBottomSheetDialogTheme</item>
    </style>

    <style name="workSansStyle" parent="@android:style/TextAppearance">
        <item name="android:fontFamily">@font/worksans</item>
    </style>

    <style name="h6" parent="workSansStyle">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="subtitle" parent="workSansStyle">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="body" parent="workSansStyle">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="RoundedBottomSheetDialogTheme" parent="Theme.Design.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/RoundedModalStyle</item>
    </style>

    <style name="RoundedModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/rounded_dialog</item>
    </style>

</resources>
